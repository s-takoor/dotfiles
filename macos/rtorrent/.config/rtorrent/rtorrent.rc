# rtorrent configuration file for macOS

# basic settings
directory = ~/Downloads
session = ~/.config/rtorrent/session

# enable distributed gash table (DHT) for public torrents
dht = auto

# set maximum number of peers to connect to
max_peers = 100

# set maximum number of simultaneous uploads
max_uploads = 5

# enable encryption for peer communication
encryption = allow_incoming,try_outgoing,enable_retry

# watch directory for auto-loading .torrent files
schedule = watch_directory,5,5,"load.start_verbose=~/Downloads/*.torrent"

# set the default encoding (UTF-8 is recommended)
encoding_list = UTF-8
